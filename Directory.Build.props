<Project>
	<PropertyGroup>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<AnalysisLevel>5</AnalysisLevel>
		<PublishReadyToRun>false</PublishReadyToRun>
		<!-- disabled for net7 <PublishTrimmed>true</PublishTrimmed> -->
		<PublishReadyToRunShowWarnings>true</PublishReadyToRunShowWarnings>
		<SuppressTrimAnalysisWarning>false</SuppressTrimAnalysisWarning>
		<!-- disabled for net7 <TrimMode>copyused</TrimMode> -->
		<DebugType>none</DebugType>
	</PropertyGroup>

  <PropertyGroup>
    <AnalysisMode>All</AnalysisMode>
    <AnalysisModeGlobalization>None</AnalysisModeGlobalization>
  </PropertyGroup>

	<PropertyGroup Condition="$(MSBuildProjectName.EndsWith('Tests'))">
		<Nullable>disable</Nullable>
	</PropertyGroup>

	<PropertyGroup Condition="$(OS) == 'Windows_NT'">
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
	</PropertyGroup>

	<PropertyGroup Condition="$(OS) != 'Windows_NT'">
		<RuntimeIdentifier>alpine-x64</RuntimeIdentifier>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Net.Compilers.Toolset" Version="4.1.0" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="SonarAnalyzer.CSharp" Version="8.38.0.46746" />
		<TrimmerRootAssembly Include="System.ComponentModel.TypeConverter" />
	</ItemGroup>

	<ItemGroup Condition="$(MSBuildProjectName.EndsWith('Tests'))">
		<PackageReference Include="NUnit" Version="3.13.3" />
		<PackageReference Include="NUnit3TestAdapter" Version="4.2.1" />
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.1.0" />
		<PackageReference Include="Moq" Version="4.17.2" />
	</ItemGroup>

	<ItemGroup Condition="!$(MSBuildProjectName.EndsWith('Tests'))">
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
			<_Parameter1>$(AssemblyName).Tests</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>

</Project>